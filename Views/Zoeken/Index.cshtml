@using webshop.Models;
@model List<Artikel>
           
@{
    ViewBag.Title = "Zoeken - INTOSPORT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
	
<div class="content">
	  <div class="contentbar">
	  
      
      @{if (Model.Count() == 0)
        { <div class="sorteerdiv">0 resultaten.</div> }
        else
        { <div class="sorteerdiv">Zoekresultaten</div> }}
	  <div class="pagediv"></div>
	  </div>

        @{foreach (Artikel a in Model)
          {  
		<div class="product">
			<a href="/kleding/artikel/@a.ID">
			<IMG SRC="@a.image" width="159px" alt="@a.merkNaam @a.naam" title="@a.merkNaam @a.naam"></a>
			<div class="producttitel">
            <strong>@a.merkNaam</strong><br>
			        @a.naam<br>
			<strong>EUR @a.prijs,- </strong>
			</div>
		</div>	
          }
          if (Model.Count() == 0)
          { <div class="contentfield">Er zijn helaas geen resultaten gevonden.</div> }}

	</div>